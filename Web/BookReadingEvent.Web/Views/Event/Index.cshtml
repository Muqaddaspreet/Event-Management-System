@{
    Layout = "_LayoutEvent";
}
@section Styles {
  
    <link href="~/css/Event.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 style="text-align:center;"><b>Upcoming Events</b> </h3>
            @foreach (var e in ViewBag.UpcomingEvents)
            {
                <a asp-action="Index" asp-controller="GetEvent" asp-route-id="@e.EventId">
                    <div class="card shadow es234CardWrapper" style="width: 46%; margin-bottom: 10px; float: left; margin-right: 10px;">
                        <div class="card-body">
                            <h5 class="card-title primaryClr">@e.Title</h5>
                            <h6 class="card-subtitle mb-2 "><b>Description:-&nbsp;</b>@e.Description </h6>
                            <h6 class="card-subtitle mb-2 "><b>Date:-&nbsp;</b>@e.Date.ToShortDateString() </h6>
                            <h6 class="card-subtitle mb-2 "><b>Duration:-&nbsp;</b>@e.Duration hrs</h6>
                            <h6 class="card-subtitle mb-2 "><b>Location:-&nbsp;</b>@e.Location</h6>
                            <h6 class="card-subtitle mb-2 "><b>Start Time:-&nbsp;</b>@e.StartTime</h6>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-6">
            <h3 style="text-align:center;"><b>Past Events </b></h3>
            @foreach (var e in ViewBag.PastEvents)
            {
                <a asp-action="Index" asp-controller="GetEvent" asp-route-id="@e.EventId">
                    <div class="card shadow es234CardWrapper" style="width:46%;margin-bottom:10px;float:left; margin-right:10px;">
                        <div class="card-body">
                            <h5 class="card-title primaryClr">@e.Title</h5>
                            <h6 class="card-subtitle mb-2 "><b>Description:-&nbsp;</b>@e.Description</h6>
                            <h6 class="card-subtitle mb-2 "><b>Date:-&nbsp;</b>@e.Date.ToShortDateString()</h6>
                            <h6 class="card-subtitle mb-2 "><b>Duration:-&nbsp;</b>@e.Duration hrs</h6>
                            <h6 class="card-subtitle mb-2 "><b>Location:-&nbsp;</b>@e.Location</h6>
                            <h6 class="card-subtitle mb-2 "><b>Start Time:-&nbsp;</b>@e.StartTime</h6>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>

</div>
@model Event;
@{
    Layout = "_LayoutEvent";
}
@section Styles {
    <link href="~/css/HomeView.css" rel="stylesheet" />
}
<h3 class="display-4" style="text-align:center">Invited Events</h3>
<hr />
<div>
    @if (ViewBag.AllEvents.Count != 0)
    {
        @foreach (var e in ViewBag.AllEvents)
        {
            <a asp-action="Index" asp-controller="GetEvent" asp-route-id="@e.EventId" asp-route-name="IE">
                <div class="card shadow es234CardWrapper" style="width: 300px; margin-bottom: 3px; float: left; margin-right: 3px; margin-left:8px; padding:3px;">
                    <div class="card-body">
                        <h5 class="card-title primaryClr">@e.Title</h5>
                        <h6 class="card-subtitle mb-2 "><b>Description:-&nbsp;</b> @e.Description</h6>
                        <h6 class="card-subtitle mb-2"><b>Date:-&nbsp;</b> @e.Date.ToShortDateString()</h6>
                        <h6 class="card-subtitle mb-2 "><b>Duration:-&nbsp;</b> @e.Duration hrs</h6>
                        <h6 class="card-subtitle mb-2"><b>Location:-&nbsp;</b> @e.Location</h6>
                        <h6 class="card-subtitle mb-2"><b>Start Time:-&nbsp;</b> @e.StartTime</h6>
                    </div>
                </div>
            </a>
        }
    }
            else
            {
                <h3 style="color:lightgray; text-align:center;">Sorry, you are not invited to any event</h3>
            }
</div>
